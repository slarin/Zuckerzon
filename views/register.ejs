<style>
  .form {
    height: 50vh;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
    margin: 20vh 10vw;
    z-index: 1 !important;
    background-blend-mode: darken;
  }
  .inpt {
    border: none;
    border-bottom: 2px solid;
    border-bottom-color: #030516;
    height: 5vh;
    margin: 15px 0;
    text-align: right;
    font-size: 1.3rem;
    transition: border-bottom-color ease-out 800ms;
    outline: none;
    min-width: 40vw;
    background: transparent;
  }
  .form-btn {
    margin: 30px 0;
    color: #ffffff;
    background-color: #030516;
    border: 1px solid #030516;
    font-size: 1.1rem;
    padding: 2px;
  }
  .form-btn:hover {
    background-color: #ff007b;
    border: 1px solid #ff007b;
    cursor: pointer;
  }
  .redir {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    text-align: center;
  }
  .pink { color: #ff007b;}
  
  @media(max-width: 500px){
    .inpt {
      min-width: auto;
      width: auto;
    }
    .form {
      margin: 20vh 5vw;
    }
  }
  </style>
  
  <%- include ('./partials/msg') %>
  <form action="/users/register" method="POST" class="form">
    <div class="form-group">
      <input
        type="name" id="name" name="name" 
        class="inpt" placeholder="Name"
        value="<%= typeof name != 'undefined' ? name : '' %>"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="email" id="email" name="email" 
        class="inpt" placeholder="Email address"
        value="<%= typeof name != 'undefined' ? email : '' %>"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="password" id="password" name="password" 
        class="inpt" placeholder="Password"
        value="<%= typeof name != 'undefined' ? password : '' %>"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="password" id="password2" name="password2" 
        class="inpt" placeholder="Confirm Password"
        value="<%= typeof name != 'undefined' ? password2 : '' %>"
        required
      />
    </div>
    <button type="submit" class="form-btn">Register</button>
  </form>
  <p class="redir">Already have an account? <a href="/users/login" class="pink">Login</a></p>
  
  <div class="waves-header"> 
    <div>
      <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
      viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
        <defs>
          <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
        </defs>
        <g class="parallax">
          <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
          <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
          <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
          <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
        </g>
      </svg>
    </div>
  </div>